/*!
 * \brief Simple XMC Relax Kit demo program.
 * \author M. Horauer
 * \version 0.1
 */
#include "xmc4500.h"

#define STACK_TOP 0x2000FFFF

//! Function Prototypes
int main(void);
void wait(unsigned long);

//! Vector table
unsigned int *myvectors[2]
__attribute__ ((section("vectors"))) = {
    (unsigned int *) STACK_TOP,
    (unsigned int *) main,
};

//! \brief Main routine that toggles are port with
int main(void)
{
	USIC0_CH0->CCR |= 0x0002;	//Configure USIC as UART/ASC
	USIC0_CH0->FDR |= 0x8052;

	USIC0_CH0->CCFG |= 0x0003;	//Enable USIC clock
	while(((USIC0_CH0->CCFG) && 0x01)!=0x01);


	while(1) {

  }
}

void wait(unsigned long delay) {
  while(delay--) {
    __NOP();
  }
}
/*! EOF */
